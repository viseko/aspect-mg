doctype html
html(lang="ru")
  include ../data/data
  include ../mixins/mixins

  block config
    - var title = ""
    - var page = "index"

  block head
    head
      meta(charset="UTF-8")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      meta(name="viewport", content="width=device-width, initial-scale=1.0")
      title #{title}
      link(rel="stylesheet", href="css/style.min.css")

  body
    .page
      block header
        include header
      block content
      block footer
        include footer
      block scripts
        script(src="js/app.min.js")
    .mobile-menu
